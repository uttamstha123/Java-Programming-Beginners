
public class Pattern1 {

	public static void main(String[] args) {
//			*
//		  * * *
//		* * * * *
//    * * * * * * *
//  	* * * * *
//  	  * * *
//  	    *
		
		
		// First Pattern
//			*
//		  * * 
//		* * * 
//    * * * * 
	for(int i = 0 ; i < 4 ; i++) {
		for(int j = 3 ; j > 0 ; j--) {
			System.out.print(" ");
		}
		for(int k = 0 ; k < 4 ; k++) {
			for(int l = 0 ; l <= k ; l++) {
				System.out.print("*");
			}
			break;
		}
	}
		
		
	}

}
