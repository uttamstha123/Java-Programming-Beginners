
public class Pattern1 {

	public static void main(String[] args) {
//			*
//		  * * *
//		* * * * *
//    * * * * * * *
//  	* * * * *
//  	  * * *
//  	    *
		
		
		// First Pattern
//			*
//		  * * 
//		* * * 
//    * * * * 
		for(int i = 0 ; i < 4 ; i++) {
			System.out.print(" ");
		}
		for(int j = 0 ; j <=i ; j++) {
			System.out.print("*");
		}
		System.out.println();
		
		
	}

}
