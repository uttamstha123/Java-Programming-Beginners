
public class Pattern1 {

	public static void main(String[] args) {
//			*
//		  * * *
//		* * * * *
//    * * * * * * *
//  	* * * * *
//  	  * * *
//  	    *
		// First Pattern
//			*
//		  * * *
//		* * * * *
//    * * * * * * *
		int i, j; int c = 3; int d = 0;
		for (i = 0; i < 4; i++) {
			for(j = c ; j > 0 ; j--) {
				System.out.print(" ");
			}
			for(int k = 0  ; k < (2*i)+1; k++) {
				System.out.print("*");
			}
			System.out.println();
			c--;
		}
//  		* * * * *
//		  	  * * *
//		 	    *
		for (i = 3; i > 0; i--) {
			for(j = 0 ; j < d ; j++) {
				System.out.print(" ");
			}
			for(int k = 0  ; k <(2*i)+1; k++) {
				System.out.print("*");
			}
			System.out.println();
			d++;
		}
	}

}
