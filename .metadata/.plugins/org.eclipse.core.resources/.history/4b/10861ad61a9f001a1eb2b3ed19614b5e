
public class Pattern {
	// Print pattern If (n = 3)
	//  *		1
	//	* *		2
	//	* * *	3
	//	* *		2
	//	*		1
	public static void main(String[] args) {
		// first make this pattern
		//  *		1
		//	* *		2
		//	* * *	3		
		for(int i = 0 ; i < 3 ; i++) {
			for(int j = 0 ; j <= i ; j++) {
				System.out.print("*");
			}
			System.out.println();
			for(int k = 0 ; k < 2 ; k++) {
				for(int j = k ; j > 0 ; j--) {
					System.out.print("*");
				}
				System.out.println();
			}
		}
	}
}
